	<% @page_title = "sections edit" %>
	
    <h1>Edit Section</h1>

	<%= link_to("< Back to sections", {:action => "list", :page_id => @page.id, :subject_id => params[:subject_id]}, :class => "back-link btn") %>
	
	<%= form_for(:section, :url => {:action => "update", :id => @section.id}) do |f| %>	
	
		<%= render(:partial => "form", :locals => {:f => f}) %>
	
		<div class="actions">
			<%= submit_tag("Update Section", :class => "btn info") %>
			<%= link_to("Cancel", {:action => "list", :page_id => @page.id, :subject_id => params[:subject_id]}, :class => "btn") %>
		</div>	

	<% end %>
