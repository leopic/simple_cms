    <% @page_title = "sections new" %>

    <h1>Add Section</h1>

    <%= link_to("< back to section list", {:action => "list", :page_id => @page.id, :subject_id => params[:subject_id]}, :class => "btn") %>

    <%= form_for(:section, :url => {:action => "create", :page_id => @page.id}, :html => {:class => "form"} ) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>
        <div class="actions">
            <%= submit_tag("Create Section", :class => "btn primary") %>
            <%= link_to("Cancel", {:action => "list", :page_id => @page.id, :subject_id => params[:subject_id]}, :class => "btn") %>
        </div>
    <% end %>