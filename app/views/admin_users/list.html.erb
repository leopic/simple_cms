	<% @page_title = "adminUsers list" %>
	
	<h1>All AdminUsers</h1>    
  	<%= link_to("Add New AdminUser", {:action => 'new'}, :class => "action new btn") %>
    
    <h2><%= pluralize(@admin_users.size, 'admin user') %> <small>found</small></h2>
    
    <table class="list">
    	<tr class="header">
    		<th>Username</th>
    		<th>Name</th>
    		<th>Email</th>
    		<th>Actions</th>
    	</tr>
    	<% @admin_users.each do |admin_user| %>
    	<tr>
    		<td><%= admin_user.username %></td>
    		<td><%= admin_user.name %></td>
			<td><%= mail_to(admin_user.email) %></td>
    		<td class="cta">
				<%= link_to("Edit", 	{:action => 'edit', 	:id => admin_user.id }, :class => "action edit btn info") %>
				<%= link_to("Delete", 	{:action => 'delete', 	:id => admin_user.id}, 	:class => "action delete btn danger") %>
    		</td>
    	</tr>    
    	<% end %>
    </table>