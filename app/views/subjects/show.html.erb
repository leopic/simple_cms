    <% @page_title = "subjects show" %>
    
    <h1>Subject: <%= @subject.name %></h1>
	
	<%= link_to("< Back to list", {:action => "list"}, :class => "back-link btn") %>	
	
	<table>
	    <tr>
	            <th>Name</th>
	            <td><%= @subject.name %></td>
	    </tr>
	    <tr>
	            <th>Position</th>
	            <td><%= @subject.position %></td>
	    </tr>
	    <tr>
	            <th>Visible</th>
	            <td><%= @subject.visible %></td>
	    </tr>
	    <tr>
	            <th>Created</th>
	            <td><%= @subject.created_at.strftime("%m/%d/%y") %></td>
	    </tr>
	    <tr>
	            <th>Updated</th>
	            <td><%= @subject.updated_at.strftime("%m/%d/%y") %></td>
	    </tr>
    </table>