
	<% @page_title = "subjects list" %>
	
	<h1>Edit Subject</h1>
	
	<%= link_to("< Back to list", {:action => "list"}, :class => "back-link btn") %>
	
	<%= form_for(:subject, :url => {:action => "update", :id => @subject.id}) do |f| %>

		<%= render(:partial => "form", :locals => {:f => f}) %>
	
		<%= submit_tag("Update Subject", :class => "btn info") %>
