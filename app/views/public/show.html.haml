%article.content

  %h2= @page.name

  - @page.sections.visible.sorted.each do |section|

    %section
      - case section.content_type
        - when 'html'
          = raw(sanitize(section.content, :tags => ['strong', 'em', 'a', 'p', 'script', 'pre']))
        - when 'text'
          %p= section.content