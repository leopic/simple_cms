<!DOCTYPE html>
<html>
<head>
    <title>Page - List</title>
</head>
<body>
<div id="wrapper">
    <h1>Pages</h1>    
    <% if !flash[:notice].blank? %>
    	<h2><%= flash[:notice] %></h2>    
    <% end %>
    <nav>
    	<%= link_to("Add New Page", {:action => 'new'}, :class => "action new") %>
    </nav>
    <table class="list">
    	<tr class="header">
    		<th>ID. </th>
    		<th>Name</th>
    		<th>Permalink</th>
    		<th>Position</th>
			<th>Visibile</th>
    		<th>Created at</th>
    		<th>Updated at</th>
    	</tr>
    	<% @pages.each do |page| %>
    	<tr>
    		<td><%= page.id %></td>
			<td><%= page.name %></td>
    		<td><%= page.permalink %></td>
    		<td><%= page.position %></td>
    		<td><%= page.visible ? 'Yes' : 'No' %></td>
			<td><%= page.created_at %></td>
    		<td><%= page.updated_at %></td>
    		<td class="actions">
				<%= link_to("Show", 	{:action => 'show', 	:id => page.id }, 	:class => "action show") %>
				<%= link_to("Edit", 	{:action => 'edit', 	:id => page.id }, 	:class => "action edit") %>
				<%= link_to("Delete", 	{:action => 'delete', 	:id => page.id}, 	:class => "action delete") %>
    		</td>
    	</tr>    
    	<% end %>
    </table>
</div>
</body>
</html>
