	<% @page_title = "pages list" %>
	
	<h1>Pages</h1>

  	<%= link_to("Add New Page", {:action => 'new'}, :class => "btn") %>
    
    <table class="list">
    	<tr class="header">
			<th>Subject ID</th>
    		<th>Name</th>
    		<th>Permalink</th>
			<th>Position</th>			
			<th>Sections</th>
			<th>Visible</th>
    		<th>Actions</th>
    	</tr>
    	<% @pages.each do |page| %>
    	<tr>
			<td><%= page.subject_id %></td>
			<td><%= page.name %></td>
    		<td><%= page.permalink %></td>			
    		<td><%= page.position %></td>
			<td>TBD</td>    		
    		<td><%= status_tag(page.visible) %></td>
    		<td class="cta">
				<%= link_to("Show", 	{:action => 'show', 	:id => page.id}, 	:class => "btn primary") %>
				<%= link_to("Edit", 	{:action => 'edit', 	:id => page.id}, 	:class => "btn info") %>
				<%= link_to("Delete", 	{:action => 'delete', 	:id => page.id}, 	:class => "btn danger") %>
    		</td>
    		
    	</tr>
    	<% end %>
    </table>
