	<% @page_title = "pages list" %>
	
	<h1>Pages</h1>

  	<%= link_to("Add New Page", {:action => 'new'}, :class => "action new btn") %>
    
    <table class="list">
    	<tr class="header">
    		<th>ID. </th>
    		<th>Name</th>
    		<th>Permalink</th>
    		<th>Position</th>
			<th>Visibile</th>
    		<th>Created</th>
    		<th>Updated</th>
    		<th>Actions</th>
    	</tr>
    	<% @pages.each do |page| %>
    	<tr>
    		<td><%= page.id %></td>
			<td><%= page.name %></td>
    		<td><%= page.permalink %></td>
    		<td><%= page.position %></td>
    		<td><%= status_tag(page.visible) %></td>
			<td><%= page.created_at.strftime("%m/%d/%y") %></td>
    		<td><%= page.updated_at.strftime("%m/%d/%y") %></td>
    		<td class="cta">
				<%= link_to("Show", 	{:action => 'show', 	:id => page.id }, 	:class => "action show btn primary") %>
				<%= link_to("Edit", 	{:action => 'edit', 	:id => page.id }, 	:class => "action edit btn info") %>
				<%= link_to("Delete", 	{:action => 'delete', 	:id => page.id}, 	:class => "action delete btn danger") %>
    		</td>
    		
    	</tr>
    	<% end %>
    </table>
