	<% @page_title = "page show" %>
	
    <h1>Show Page</h1>
    
    <%= link_to("< Back to list", {:action => "list"}, :class => "back-link btn") %>
        
    <table>
    	<tr>
    		<th>ID</th>
    		<td><%= @page.id %></td>
    	</tr>
    	<tr>
    		<th>Name</th>
    		<td><%= @page.name %></td>
    	</tr>
    	<tr>
    		<th>Permalink</th>
    		<td><%= @page.permalink %></td>
    	</tr>
    	<tr>
    		<th>Position</th>
    		<td><%= @page.position %></td>
    	</tr>
    	<tr>
    		<th>Visible</th>
    		<td><%= @page.visible %></td>
    	</tr>
    	<tr>
    		<th>Created</th>
    		<td><%= @page.created_at.strftime("%m/%d/%y") %></td>
    	</tr>
    	<tr>
    		<th>Updated</th>
    		<td><%= @page.updated_at.strftime("%m/%d/%y") %></td>
    	</tr>    	
	</table>